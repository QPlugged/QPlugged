{
    "build": {
        "beforeDevCommand": "yarn vite",
        "beforeBuildCommand": "yarn tsc && yarn vite build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "QPlugged",
        "version": "../package.json"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": ["app", "appimage", "deb"],
            "identifier": "com.qplugged",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["**"]
            }
        },
        "windows": [
            {
                "label": "main",
                "transparent": true,
                "fullscreen": false,
                "resizable": true,
                "title": "QPlugged",
                "width": 0,
                "height": 0,
                "decorations": false,
                "windowEffects": {
                    "effects": ["mica"]
                }
            }
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}
