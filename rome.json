{
    "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentSize": 4
    },
    "files": {
        "ignore": [
            ".vscode",
            ".yarn",
            ".pnp.cjs",
            ".pnp.loader.mjs",
            "dist",
            "src-tauri/target",
            "src-tauri/src"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "correctness": {
                "noInvalidConstructorSuper": "off"
            },
            "style": { "noNonNullAssertion": "off" }
        }
    }
}
